      <Real start="0.7" min="0.5" max="1"/>
    </ScalarVariable>
    <ScalarVariable name="v_min" valueReference="4" description="Velocity below which the ball stops bouncing" variability="constant">
      <Real start="0.1" declaredType="Velocity"/>
    </ScalarVariable>
  </ModelVariables>

  <ModelStructure>
