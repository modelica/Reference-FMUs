  <UnitDefinitions>
    <Unit name="m">
      <BaseUnit m="1"/>
    </Unit>
    <Unit name="m/s">
      <BaseUnit m="1" s="-1"/>
    </Unit>
    <Unit name="m/s2">
      <BaseUnit m="1" s="-2"/>
    </Unit>
  </UnitDefinitions>

  <TypeDefinitions>
    <SimpleType name="Position">
      <Real quantity="Position" unit="m"/>
    </SimpleType>
    <SimpleType name="Velocity">
      <Real quantity="Velocity" unit="m/s"/>
